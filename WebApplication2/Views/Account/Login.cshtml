@model CustomIdentityApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login Page";
}


<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@Model.ReturnUrl" class="login">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <input class="login_email" placeholder="Email" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <input class="login_pass" placeholder="Password" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <input class="login_remeber" placeholder="Remember Me" asp-for="RememberMe" />
        <label asp-for="RememberMe"></label><br />
    </div>
    <div class="login_container">
        <div>
            <input class="login_btn" type="submit" value="Войти" />
        </div>
        <a class="login_btn" asp-action="Register">Регистрация</a>
    </div>
</form>
